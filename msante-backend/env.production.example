# M-Sant√© Backend Production Environment Configuration - Phase 4
# Copy this file to .env.production and update the values

# Database Configuration
DB_USERNAME=msante_user
DB_PASSWORD=SecurePassword123!
MYSQL_ROOT_PASSWORD=RootSecurePassword456!

# Redis Configuration
REDIS_PASSWORD=RedisSecurePassword789!

# JWT Configuration
JWT_SECRET=YourSuperSecureJWTSecretKeyForProductionEnvironment2024!

# Grafana Configuration
GRAFANA_PASSWORD=GrafanaSecurePassword2024!

# Application Configuration
SPRING_PROFILES_ACTIVE=production
SERVER_PORT=8080

# Logging Configuration
LOGGING_LEVEL_ROOT=WARN
LOGGING_LEVEL_SN_GOUDIABY_MSANTE=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=INFO
LOGGING_LEVEL_ORG_HIBERNATE_SQL=WARN

# Performance Configuration
SPRING_CACHE_TYPE=redis
SPRING_CACHE_REDIS_TIME_TO_LIVE=3600000
SPRING_CACHE_REDIS_CACHE_NULL_VALUES=false

# Security Configuration
SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_ISSUER_URI=https://msante.sn
SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_JWK_SET_URI=https://msante.sn/.well-known/jwks.json

# Monitoring Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when_authorized
MANAGEMENT_METRICS_EXPORT_PROMETHEUS_ENABLED=true

# Database Connection Pool
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=20
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=5
SPRING_DATASOURCE_HIKARI_IDLE_TIMEOUT=300000
SPRING_DATASOURCE_HIKARI_CONNECTION_TIMEOUT=20000

# Redis Connection Pool
SPRING_REDIS_TIMEOUT=2000ms
SPRING_REDIS_LETTUCE_POOL_MAX_ACTIVE=8
SPRING_REDIS_LETTUCE_POOL_MAX_IDLE=8
SPRING_REDIS_LETTUCE_POOL_MIN_IDLE=0

# JVM Options (will be set in Dockerfile)
# JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC -XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0
